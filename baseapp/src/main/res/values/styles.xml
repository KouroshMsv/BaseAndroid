<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/baseAppPrimary</item>
        <item name="colorPrimaryDark">@color/baseAppPrimaryDark</item>
        <item name="colorAccent">@color/baseAppAccent</item>
        <item name="shimmer_direction">right_to_left</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FullScreenDialogStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowEnterAnimation">@anim/slide_enter_up</item>
        <item name="android:windowExitAnimation">@anim/slide_pop_exit_down</item>
    </style>

    <style name="MaterialDialogSheet" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>
